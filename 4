#include <iostream>
using namespace std;
void output(int M,int N, int** matrix)
{
    cout << "-------------------------\n";
    int count = 0;
    for (int i = 0; i < M; i++) {
        for (int j = 0; j < N; j++)
        {
            cout << matrix[i][j] << " ";
            count += 1;
        }
        if (count == N) { cout << "\n"; count = 0; }
    }  
}
int** switch_zero(int M, int N, int** matrix)
{
    int l = 1;
    int k = 1;
    for (int i = 0; i < M - k; i++)
    {
        for (int j = 0; j < N - l; j++)
        {
            matrix[i][j] = 0;
            
        }
        l++;
    }
    return matrix;
}

int** generator_matrix(int M, int N, int** matrix, int x)
{
    for (int i = 0; i < M; i++)
        matrix[i] = new int[N];

    for (int i = 0; i < M; i++)
        for (int j = 0; j < N; j++)
        {
            matrix[i][j] = rand() % x;
        }
    return matrix;
}

int main()
{
    int M, N,x;
    cin >> M>>N>>x;
    int** matrix = new int* [M];
    generator_matrix(M, N, matrix, x);
    output(M, N, matrix);
    switch_zero(M, N, matrix);
    output(M, N, matrix);
}

